!!! XML
!!! strict
%html{ xmlns: "http://www.w3.org/1999/xhtml" }
  %head
    %title
      Sample haml template
    %script(src='/ba-debug.min.js')
    %script(src='/jquery-1.4.2.min.js')
    %script(src='/tracker.js')
    %link(rel='stylesheet' href='style.css')
  %body
    %nav
      %a(href='/') Home
      %a(href='/yesterday') Yesterday's Items
      %a(href='/today') Today's Items
    %br.clear
    .left#date
      Filter by Date
    .left#main
      #filters
        %a(href='/') Clear selection
      #items
      = partial('form')
    .right.tags
      %a(href='#' onclick="$('#tags a').removeClass('selected').find(':first').click();return false;") Select None
      #tags
      #newTag
        %form(method='post')
          %input(name='name')
          %button(type='submit') Save

    %br.clear
